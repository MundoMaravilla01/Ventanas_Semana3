<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ventanas_Semana3.Login">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Usuario" TextColor="Blue" x:Name ="txtUsuario"/>
            <Entry Placeholder="Password" IsPassword="True" x:Name ="txtPassword" TextColor="Blue"/>

            <Button Text="Iniciar Sesión" Clicked="Button_Clicked"/>
            <Label Text="" x:Name="lblResultado" TextColor="Red" HorizontalOptions="Center"/>

            <DatePicker></DatePicker>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>